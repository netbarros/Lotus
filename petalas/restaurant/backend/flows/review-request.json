      "id": "rev-1a2b3c4d-5e6f-7g8h-9i0j-1k2l3m4n5o6p",
      "name": "Order Completed?",
      "key": "is_completed",
      "type": "condition",
      "position_x": 10,
      "position_y": 10,
      "options": {
        "filter": {
          "$trigger": {
            "payload": {
              "status": {
                "_eq": "completed"
              }
            }
          }
        }
